{
  "name": "cursor-prompt-manager",
  "displayName": "Cursor Prompt Manager",
  "description": "A powerful prompt management extension for Cursor IDE",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/cursor-prompt-manager.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "prompt",
    "ai",
    "cursor",
    "template",
    "productivity"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "promptManager.openPanel",
        "title": "Open Prompt Manager",
        "category": "Prompt Manager"
      },
                      {
                    "command": "promptManager.selectPrompt",
                    "title": "Select Prompt",
                    "category": "Prompt Manager"
                },
      {
        "command": "promptManager.createPrompt",
        "title": "Create New Prompt",
        "category": "Prompt Manager"
      },
      {
        "command": "promptManager.editPrompt",
        "title": "Edit",
        "category": "Prompt Manager"
      },
      {
        "command": "promptManager.insertSpecificPrompt",
        "title": "Insert Prompt",
        "category": "Prompt Manager"
      },
      {
        "command": "promptManager.importPrompts",
        "title": "Import Prompts",
        "category": "Prompt Manager"
      },
      {
        "command": "promptManager.exportPrompts",
        "title": "Export Prompts",
        "category": "Prompt Manager"
      },
      {
        "command": "promptManager.deletePrompt",
        "title": "Delete",
        "category": "Prompt Manager"
      },
      {
        "command": "promptManager.selectAndDeletePrompt",
        "title": "Delete Prompt...",
        "category": "Prompt Manager"
      }
    ],
    "views": {
      "prompt-manager": [
        {
          "id": "promptManager",
          "name": "Prompt Manager",
          "when": "promptManager:enabled",
          "icon": "$(list-tree)"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "prompt-manager",
          "title": "Prompt Manager",
          "icon": "$(symbol-text)"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "promptManager.selectPrompt",
          "group": "1_modification",
          "when": "editorTextFocus"
        }
      ],
      "view/item/context": [
        {
          "command": "promptManager.editPrompt",
          "when": "view == promptManager && viewItem == prompt",
          "group": "inline@1"
        },
        {
          "command": "promptManager.deletePrompt",
          "when": "view == promptManager && viewItem == prompt",
          "group": "inline@2"
        },
        {
          "command": "promptManager.insertSpecificPrompt",
          "when": "view == promptManager && viewItem == prompt",
          "group": "navigation@1"
        }
      ],
      "commandPalette": [
        {
          "command": "promptManager.openPanel"
        },
        {
          "command": "promptManager.selectPrompt"
        },
        {
          "command": "promptManager.createPrompt"
        }
      ]
    },
    "keybindings": [
      {
        "command": "promptManager.selectPrompt",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i"
      },
      {
        "command": "promptManager.openPanel",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p"
      }
    ],
    "configuration": {
      "title": "Prompt Manager",
      "properties": {
        "promptManager.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save prompts when modified"
        },
        "promptManager.showPreview": {
          "type": "boolean",
          "default": true,
          "description": "Show prompt preview before insertion"
        },
        "promptManager.enableSync": {
          "type": "boolean",
          "default": false,
          "description": "Enable cloud synchronization"
        },
        "promptManager.defaultCategory": {
          "type": "string",
          "default": "General",
          "description": "Default category for new prompts"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  }
}
